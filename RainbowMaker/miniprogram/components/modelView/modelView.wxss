.titleText{
  font-size:30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height:80rpx;
  font-weight: 700;
  width:100%;
  border-bottom: 0.1rpx solid #CCC;
}
.messageText{
  font-size:30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height:100rpx;
  margin:0 40rpx;
}

.buttonView{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.modalDlg>view>button{
  width:290rpx;
  height:80rpx;
  font-size: 30rpx;
  border-radius: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-top: 0.1rpx solid #CCC;
}
.cancelButton{
  border-right:0.1rpx solid #CCC;
  color: red;
}
.confirmButton{
  border-radius: 0;
  color: rgb(66, 143, 218);
}